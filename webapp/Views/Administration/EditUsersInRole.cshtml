@model List<UserRoleViewModel>

@{
    ViewBag.Title = "Modifier les utilisateurs associés au rôle";
    var roleId = ViewBag.roleId;
    Layout = "_Layout.cshtml";
}

<h2>Modifier les utilisateurs associ&eacute;s au r&ocirc;le</h2>

<div class="row">
    <div class="col-md">
        <form method="post">

            <table id="myTable" class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Utilisateur</th>
                        <th scope="col">Ajouter</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].UserName" />
                                @Model[i].UserName
                            </td>
                            <td>
                                <input asp-for="@Model[i].IsSelected" />
                            </td>
                        </tr>
                        @*
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].UserName
                            </label>
                        *@
                    }
                </tbody>
            </table>

            <div class="form-group row">
                <div class="col-md">
                    <button type="submit" class="btn btn-primary m-1">
                        <i class="fas fa-check" style="width:14px; height:16px"></i>
                        &nbsp;
                        Sauvegarder
                    </button>
                    <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger m-1">
                        <i class="fas fa-times" style="width:14px; height:16px"></i>
                        &nbsp;
                        Annuler
                    </a>
                </div>
            </div>
        </form>
        <div>
            <a asp-action="ListRoles">Retour &agrave; la liste des r&ocirc;les</a>
        </div>
    </div>
</div>