                                        string description;

                                        if (myEvent.Description != null)
                                        {

                                            if (myEvent.Description.Length <= descriptionMaxLength)
                                            {
                                                description = myEvent.Description;
                                            }
                                            else
                                            {
                                                description = Truncate(myEvent.Description, descriptionMaxLength) + "...";
                                            }

                                            @description

                                        }
