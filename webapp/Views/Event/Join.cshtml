  @model ViewModels.ListEventsViewModel


@{
    ViewData["Title"] = "Organiser un evenement";
}

@section HeadScripts {

    <link rel="stylesheet" href="~/lib/tempus-dominus-datetimepicker/css/tempusdominus-bootstrap-4.min.css" />

}

<h1 class="border-bottom">Rejoindre un Evenement</h1>
<div class="row">
    <div class="col-md">
        <form asp-action="Join">
            <div class="text-danger"></div>  

    <div class="form-group">
                @* @Html.LabelFor(m => m.Events, htmlAttributes: new { @class = "control-label col-md-2" }) *@
                <div class="col-md-6">
                    @Html.DropDownListFor(Model => Model.Event.Id, new SelectList(Model.Events, "Id",
                    "Title"), new { @class = "form-control" })
                </div>
            </div>



      <div class="form-group">
                <input type="submit" value="Join" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
